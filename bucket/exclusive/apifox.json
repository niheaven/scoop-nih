{
    "version": "2.3.13",
    "description": "All-in-one collaboration platform for API documentation, API debugging, API Mock and API test automation.",
    "homepage": "https://apifox.com",
    "license": "Freeware",
    "architecture": {
        "64bit": {
            "url": "https://cdn.apifox.cn/download/2.3.13/Apifox-2.3.13.exe#/dl.7z",
            "hash": "sha512:87dd7b28ad192e82e1549ea750c80ee0ec8fc0a2cb3d7c783cac22ad219d15215203cbd0a4cd8e88926cf1d71782792196dce4bdd43751813128cc15597a1569",
            "pre_install": [
                "Expand-7zipArchive \"$dir\\`$PLUGINSDIR\\app-64.7z\" \"$dir\"",
                "Remove-Item \"$dir\\`$*\", \"$dir\\Uninstall*\" -Force -Recurse"
            ]
        },
        "32bit": {
            "url": "https://cdn.apifox.cn/download/2.3.13/Apifox-windows-x86-2.3.13.exe#/dl.7z",
            "hash": "sha512:2e393de5afadb03d95ae5311b209ff21b9d8b527ad302e57cd3e2469458e33388f32e0c3a4e18b9d68f63f234241f9ad00ac6f4a8764c0239788cf8629cc2aee",
            "pre_install": [
                "Expand-7zipArchive \"$dir\\`$PLUGINSDIR\\app-32.7z\" \"$dir\"",
                "Remove-Item \"$dir\\`$*\", \"$dir\\Uninstall*\" -Force -Recurse"
            ]
        }
    },
    "shortcuts": [
        [
            "Apifox.exe",
            "Apifox",
            "--user-data-dir=\"$dir\\UserData\""
        ]
    ],
    "persist": "UserData",
    "checkver": {
        "url": "https://cdn.apifox.cn/download/latest.yml",
        "regex": "version: ([\\d.]+)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://cdn.apifox.cn/download/$version/Apifox-$version.exe#/dl.7z",
                "hash": {
                    "url": "https://cdn.apifox.cn/download/latest.yml",
                    "regex": "sha512: $base64"
                }
            },
            "32bit": {
                "url": "https://cdn.apifox.cn/download/$version/Apifox-windows-x86-$version.exe#/dl.7z",
                "hash": {
                    "url": "https://cdn.apifox.cn/download/x32/latest.yml",
                    "regex": "sha512: $base64"
                }
            }
        }
    }
}
